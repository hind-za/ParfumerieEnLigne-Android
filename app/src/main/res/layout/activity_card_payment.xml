<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- En-tÃªte -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’³ Paiement par carte"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="16dp"/>

        <!-- Montant Ã  payer -->
        <TextView
            android:id="@+id/tv_montant_a_payer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Montant Ã  payer: 0.00 MAD"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#E91E63"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/btn_rounded_outline"
            android:layout_marginBottom="24dp"/>

        <!-- Carte bancaire -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type de carte"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="12dp"/>

                <RadioGroup
                    android:id="@+id/rg_type_carte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/rb_visa"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Visa"
                        android:buttonTint="#E91E63"/>

                    <RadioButton
                        android:id="@+id/rb_mastercard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mastercard"
                        android:buttonTint="#E91E63"/>

                    <RadioButton
                        android:id="@+id/rb_cmi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="CMI"
                        android:buttonTint="#E91E63"/>
                </RadioGroup>

                <!-- Logo de la carte -->
                <ImageView
                    android:id="@+id/iv_carte_logo"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:contentDescription="Logo carte"
                    android:layout_marginBottom="16dp"/>

                <!-- NumÃ©ro de carte -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:startIconDrawable="@drawable/ic_credit_card">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_numero_carte"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="NumÃ©ro de carte"
                        android:inputType="number"
                        android:maxLength="19"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Nom du titulaire -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:startIconDrawable="@drawable/ic_person">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_nom_titulaire"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nom du titulaire"
                        android:inputType="textCapCharacters"/>
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Date d'expiration -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:startIconDrawable="@drawable/ic_calendar">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_date_expiration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="MM/YY"
                            android:inputType="number"
                            android:maxLength="5"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- CVV -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:startIconDrawable="@drawable/ic_lock">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_cvv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="CVV"
                            android:inputType="numberPassword"
                            android:maxLength="3"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Info sÃ©curitÃ© -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/btn_rounded_outline"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_lock"

                android:layout_marginEnd="12dp"
                android:contentDescription="SÃ©curitÃ©"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ”’ Paiement 100% sÃ©curisÃ©\nVos donnÃ©es sont chiffrÃ©es"
                android:textColor="#757575"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:indeterminateTint="#E91E63"
            android:layout_marginBottom="16dp"/>

        <!-- Bouton Payer -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="4dp"
            android:backgroundTint="@null">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_header"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_payer"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:text="ðŸ”’ Payer maintenant"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="18sp"
                android:elevation="8dp"/>
        </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>