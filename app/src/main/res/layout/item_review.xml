<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="3dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- HEADER (ÉTOILES + DATE) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Étoiles -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/star1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_star_outline"
                    app:tint="#FFA726"/>

                <ImageView
                    android:id="@+id/star2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_star_outline"
                    app:tint="#FFA726"
                    android:layout_marginStart="2dp"/>

                <ImageView
                    android:id="@+id/star3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_star_outline"
                    app:tint="#FFA726"
                    android:layout_marginStart="2dp"/>

                <ImageView
                    android:id="@+id/star4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_star_outline"
                    app:tint="#FFA726"
                    android:layout_marginStart="2dp"/>

                <ImageView
                    android:id="@+id/star5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_star_outline"
                    app:tint="#FFA726"
                    android:layout_marginStart="2dp"/>
            </LinearLayout>

            <!-- Date -->
            <TextView
                android:id="@+id/tvReviewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19 Déc 2025"
                android:textSize="11sp"
                android:textColor="#95A5A6"/>
        </LinearLayout>

        <!-- TITRE -->
        <TextView
            android:id="@+id/tvReviewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Excellent produit !"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:layout_marginBottom="6dp"/>

        <!-- COMMENTAIRE -->
        <TextView
            android:id="@+id/tvReviewComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Je suis très satisfaite de mon achat. La qualité est au rendez-vous et la livraison était rapide."
            android:textSize="14sp"
            android:textColor="#7F8C8D"
            android:lineSpacingExtra="2dp"/>

        <!-- BADGE POINTS -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/badge_points"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_star_filled"
                app:tint="#FFA726"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+10 points"
                android:textSize="11sp"
                android:textColor="#FFA726"
                android:textStyle="bold"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>